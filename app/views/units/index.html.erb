<h4>Active Units in GCPD</h4>
<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
  </tr>
<% @active_units.each do |unit| %>
  <tr>
    <td><%= link_to unit.name, unit_path(unit) %></td>
    <td><%= unit.active ? 'Yes' : 'No' %></td>
  </tr>
<% end %>
</table>

<h4>Inactive Units</h4>
<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
  </tr>
<% @inactive_units.each do |unit| %>
  <tr>
    <td><%= link_to unit.name, unit_path(unit) %></td>
    <td><%= unit.active ? 'Yes' : 'No' %></td>
  </tr>
<% end %>
</table>
