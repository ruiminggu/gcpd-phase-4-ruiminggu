<h1>New Unit</h1>
<%= form_for @unit do |f| %>
  <%= f.label :name, 'Unit Name' %>
  <%= f.text_field :name, id: 'unit_name' %>
  <%= f.submit 'Create Unit' %>
<% end %>


<% if @unit.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @unit.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>